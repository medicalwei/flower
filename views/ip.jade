div.page-header
  h1 #{ip} 
    small Live status
div.row-fluid
  div.total.span8
    h2 Total
    div.number
      |=ipData.getTotalString()
      | MiB
  div.updown.span4
    h2 Upload
    div.number
      |=ipData.getUploadString()
      | MiB
    h2 Download
    div.number
      |=ipData.getDownloadString()
      | MiB
div.row-fluid
  h2 Hourly status 
  p TODO: use charts
  ul
    each hourData, hour in ipData.hourlyData.hours
      li #{hour}: #{hourData.getTotal()}
